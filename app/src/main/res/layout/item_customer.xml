<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <LinearLayout
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_tv_number"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@color/red"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_customerName"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@color/red"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_ed_cup"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/cup"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_ed_rws"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/rws"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_ed_aryw"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/aryw"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_ed_afyn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/afyn"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_ed_hibard"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/hibard"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_ed_ayar"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/ayar"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_ed_note1"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/note1"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_ed_note2"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:background="@color/note2"
            android:gravity="center"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_but_update"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:backgroundTint="@color/blue"
            android:text="@string/update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/_8sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_but_delete"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_1sdp"
            android:backgroundTint="@color/red"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/_8sdp" />


    </LinearLayout>

</layout>